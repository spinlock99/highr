<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <% if @user.first_name && @user.last_name %>
        <%= image_tag @user.picture_url, :id => "pic" %>
        <h1> <%= @user.first_name %> <%= @user.last_name %></h1>
      <% end %>
      <h1>
	<%= gravatar_for @user %>
      </h1>
      <% unless @user.microposts.empty? %>
        <table class="microposts" summary="User microposts">
	  <%= render @microposts %>
	</table>
	<%= will_paginate @microposts %>
      <% end %>
      <%= render('layouts/hartman_value_profile') %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong>
      <% if @user.first_name %><%= @user.first_name %><% end %>
      <% if @user.last_name %><%= @user.last_name %><% end %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
      <strong>Microposts</strong> <%= @user.microposts.count %><br />
    </td>
  </tr>
</table>
