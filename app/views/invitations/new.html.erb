<div id="message">
  <% if signed_in? %><!-- signed_in? == true -->
    
    <%= javascript_include_tag 'signed_in' %>

    <h2>Skip the Line!</h2>

    <p>Click &ldquo;Recommend&rdquo; and &ldquo;Tweet&rdquo; to share with your friends. 
      You'll get credit for every referral that you create.</p>
    <div id="fb-root"></div><div id="facebook">[Facebook]</div>
    <br /><br />
    <div id="twitter">[Twitter]</div>
    <br /><br />
    <p>Or, enter an email address below to send an invitation.</p>

 <% else %><!-- signed_in? == false -->

   <%= javascript_include_tag 'not_signed_in' %>

   <h2>Launching soon.</h2>
   <h2>Enter your email to join our waiting list.</h2>
   
   <% end %><!-- end signed_in? -->
</div><!-- message -->
<div id="emailbox">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name) do |f| %>
  <%= devise_error_messages! %>
  
  <% if signed_in? %>
  <%= f.text_field :email, :id => "email", :value => "friends@email.com" %>
  <% else %>
  <%= f.text_field :email, :id => "email", :value => "your@email.com" %>
  <% end %>
  
  <%= f.submit "Go" %>
  <% end %>
  
  <br>
</div><!-- emailbox -->
