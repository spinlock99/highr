<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
	<h1 class="micropost">Team Talk</h1>
	<%= render 'shared/team_talk' %>
      </td>
      <td class="sidebar round">
	<%= render 'shared/user_info' %>
	<%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <%= link_to home_logo, root_path %>
  <%= render 'shared/sign_in_index' %>
  <p><strong>Or, create an account:</strong></p>
  <div class="container">
    <div class="round" id="home_page_shadow">
      <div class="round" id="gradient">
        <div class="login_box">
          <h1>Login</h1>
          <%= render('shared/sign_up_form') %>
        </div>
        <div class="sign_up_box">
          <h1>Sign up</h1>
          <%= render('shared/sign_up_form') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
