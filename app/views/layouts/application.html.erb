<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render('layouts/stylesheets') %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery-ui' %>
    <!-- Landever Scripts -->
    <%= javascript_include_tag 'landever1/jquery.min.js' %>
    <%= javascript_include_tag 'landever1/jquery-cufon.js' %>
    <%= javascript_include_tag 'landever1/font-mentone.js' %>
    <%= javascript_include_tag 'landever1/fancybox/jquery.fancybox-1.3.4.pack.js' %>
    <%= javascript_include_tag 'landever1/jquery.nivo.slider.pack.js' %>
    <%= javascript_include_tag 'landever1/js.js' %>
    <!-- Landever Scripts -->
  </head>
  <body>
    <div class="container">
      <%= current_user.nil? ? 
	  render('layouts/landever_header') : render('layouts/header') %>
      <section id="inner-wrapper">
	<% flash.each do |key, value| %>
	  <%= content_tag(:div, value, :class => "flash #{key}") %>
	<% end %>
	<%= yield %>
      </section>
      <%= render('layouts/footer') %>
      <%= debug(params) if Rails.env.development? %>
    </div> 
  </body>
</html>
